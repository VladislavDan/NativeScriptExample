<Page loaded="loaded">
    <ActionBar title="GitHub Repositories" class="action-bar"/>
    <StackLayout orientation="vertical">
        <SearchBar id="sb_repos" hint="Search repositories" submit="onSubmit" clear="onClear"/>
        <ListView id="lv_repos" items="{{ reposList }}" height="100%" itemTap="listViewItemTap">
            <ListView.itemTemplate>
                <Label text="{{ name }}"/>
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
</Page>